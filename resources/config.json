{
	"servlet": {
		"threading": {
			"acceptorPoolSize": 10,
			"handlerPoolSize": 10,
			"classMatcherPoolSize": 4,
			"schedulingPolicy": "ABORT"
		},
		"connections": {
			"acceptorQueueSize": 10,
			"handlerQueueSize": 10,
			"dropAfter": 1000,
			"readerBufferSize": 1024,
			"writeBufferSize": 1024
		},
		"messages": {
			"maxBodySize": 600000
		},
		"binding": {
			"host": "localhost",
			"port": 3000
		}
	},
	"policies": {
		"enforcement": {
			"whitelistBehaviour": {
				"ip": "BLACKLIST",
				"url": "WHITELIST"
			},
			"allowRedirects": true
		},
		"rulesets": [
			{
				"type": "URL",
				"isWildcard": true,
				"pattern": "(http(s)?://)?some\\.[(prod)|(dev)]\\.site\\.com:[3001-4200]/"
			}
		],
		"textReplacements": [
			{
				"from": "(?i)Adelaide",
				"to": "Pripyat"
			},
			{
				"from": "(?i)Brisbane",
				"to": "Helsinki"
			},
			{
				"from": "(?i)Canberra",
				"to": "Cairo"
			},
			{
				"from": "(?i)Darwin",
				"to": "Istanbul"
			},
			{
				"from": "(?i)Hobart",
				"to": "Zagreb"
			},
			{
				"from": "(?i)Melbourne",
				"to": "Berlin"
			},
			{
				"from": "(?i)Perth",
				"to": "Hokkaido"
			},
			{
				"from": "(?i)Sydney",
				"to": "New York"
			}
		],
		"linkReplacements": [
			{
				"from": "www\\.bom\\.gov\\.au",
				"to": "localhost:3000"
			}
		]
	},
	"target": {
		"host": "www.bom.gov.au",
		"port": 80
	}
}